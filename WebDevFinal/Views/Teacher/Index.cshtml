                @Html.DisplayFor(modelItem => item.subject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.contact)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.salary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.School.nameSchool)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.idTeacher }) |
                @Html.ActionLink("Details", "Details", new { id = item.idTeacher }) |
