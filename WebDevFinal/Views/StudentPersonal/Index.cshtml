                @Html.DisplayFor(modelItem => item.grade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.contact)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.prevSchool)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.currentlyStudying)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nextSchool)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.School.nameSchool)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.idStudent }) |
                @Html.ActionLink("Details", "Details", new { id = item.idStudent }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.idStudent })
            </td>
        </tr>
    }

</table>
